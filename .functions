#!/bin/bash

# Create a new directory and enter it
mkd() {
	mkdir -p "$@" && cd "$@"
}

cms() {
    source ~/resty
	case $1 in
        live) resty https://cms-api.eu.clara.net/loki/rest -u "$USER:$(pass clara/ad/$USER)" ;;
        staging) resty https://cms-api-staging.star.net.uk/loki/rest -u "$USER:$(pass clara/ad/$USER)" ;;
        dev) resty http://localhost:8080/loki/rest -u "$USER:$(pass clara/ad/$USER)" ;;
	esac
}

ptpb() {
    curl -F "c=@${1:--}" https://ptpb.pw/
}

ppid() { ps -p ${1:-$$} -o ppid=; }

cperr() { "$@" 2>&1 | >/dev/null pbcopy; }

al() { ag "$@" --pager='less -R'; }

